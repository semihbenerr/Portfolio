@model string

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<meta name="description" content="Portfolio and professional profile showcasing skills, experience, and projects." />
<meta name="keywords" content="portfolio, developer, software engineer, projects, skills, experience" />
<meta name="author" content="Your Name" />
<meta name="robots" content="index, follow" />

<!-- Open Graph meta tags for social sharing -->
<meta property="og:title" content="@(ViewData["Title"] ?? "Portfolio - Professional Profile")" />
<meta property="og:description" content="@(ViewData["Description"] ?? "Portfolio and professional profile showcasing skills, experience, and projects.")" />
<meta property="og:image" content="@(ViewData["ImageUrl"] ?? "/images/default-profile.jpg")" />
<meta property="og:url" content="@Context.Request.Scheme://@Context.Request.Host@Context.Request.Path" />

<!-- Twitter Card meta tags -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content="@(ViewData["Title"] ?? "Portfolio - Professional Profile")" />
<meta name="twitter:description" content="@(ViewData["Description"] ?? "Portfolio and professional profile showcasing skills, experience, and projects.")" />
<meta name="twitter:image" content="@(ViewData["ImageUrl"] ?? "/images/default-profile.jpg")" />

<!-- Canonical URL to prevent duplicate content issues -->
<link rel="canonical" href="@Context.Request.Scheme://@Context.Request.Host@Context.Request.Path" />