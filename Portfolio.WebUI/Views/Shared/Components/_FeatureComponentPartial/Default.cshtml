@using MyPortfolio.WebUI.DAL.Entities
@model List<Feature>

<section id="home" class="s-home page-hero target-section" data-parallax="scroll" data-image-src="https://i.hizliresim.com/rdxofun.jpg" data-natural-width=3000 data-natural-height=2000 data-position-y=center>

    <div class="overlay"></div>
    <div class="shadow-overlay"></div>

    @foreach(var item in Model)
    {
        <div class="home-content">

            <div class="row home-content__main">

                <h3>@item.Title</h3>

                <h1>
                    @* I am Jonathan Doe. <br>
                    I am a graphic & UI/UX <br>
                    designer based in Somewhere. *@
                    @item.Description
                </h1>

                <div class="home-content__buttons">
                    <a href="#works" class="smoothscroll btn btn--stroke">
                        Son Projelerim
                    </a>

                    <a class=" btn btn--stroke full-width" href="~/hola-master/cv.pdf" download="cv.pdf">Cv'mi İndir</a>
                </div>

                <div class="home-content__scroll">
                    <a href="#about" class="scroll-link smoothscroll">
                        <span>Aşağı İn</span>
                    </a>
                </div>

            </div>

        </div>
    }

     <!-- end home-content -->

    <ul class="home-social">
        @await Component.InvokeAsync("_SocialMediaComponentPartial")
    </ul>
    <!-- end home-social -->

</section>