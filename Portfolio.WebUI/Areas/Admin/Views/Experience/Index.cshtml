
	
@model IEnumerable<Experience>
@{
    ViewData["Title"] = "Experiences";
}
<h2>Experiences</h2>
<a class="btn btn-success mb-2" href="@Url.Action("Add", "Experience", new { area = "Admin" })">Add New Experience</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Head</th>
            <th>Title</th>
            <th>Date</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Head</td>
            <td>@item.Title</td>
            <td>@item.Date</td>
            <td>@item.Description</td>
            <td>
                <a class="btn btn-primary btn-sm" href="@Url.Action("Edit", "Experience", new { id = item.Id, area = "Admin" })">Edit</a>
                <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", "Experience", new { id = item.Id, area = "Admin" })" onclick="return confirm('Delete this experience?');">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
