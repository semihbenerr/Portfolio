
    @model IEnumerable<MyPortfolio.WebUI.DAL.Entities.Testimonial>
    @{
        ViewData["Title"] = "Testimonials";
    }

    <h2>Testimonials</h2>
    <a class="btn btn-success mb-2" href="@Url.Action("Add", "Testimonial", new { area = "Admin" })">Add New Testimonial</a>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Full Name</th>
                <th>Company</th>
                <th>Title</th>
                <th>Comment</th>
                <th>Image</th>
                <th>Created Date</th>
                <th>Approved</th>
                <th>LinkedIn</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FullName</td>
                <td>@item.Company</td>
                <td>@item.Title</td>
                <td>@item.Comment</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" alt="Image" width="50" />
                    }
                </td>
                <td>@item.CreatedDate.ToString("yyyy-MM-dd")</td>
                <td>@(item.IsApproved ? "Yes" : "No")</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.LinkedInUrl))
                    {
                        <a href="@item.LinkedInUrl" target="_blank">LinkedIn</a>
                    }
                </td>
                <td>
                    <a class="btn btn-primary btn-sm" href="@Url.Action("Edit", "Testimonial", new { id = item.Id, area = "Admin" })">Edit</a>
                    <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", "Testimonial", new { id = item.Id, area = "Admin" })" onclick="return confirm('Delete this testimonial?');">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>